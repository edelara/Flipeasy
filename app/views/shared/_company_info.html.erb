<!-- company info -->
<div class="project-show__company-info">
  <!-- project box-->
    <h2 class="box-content-header pb-3">
      <%= @project.company_name %>
    </h2>
    <div class="d-flex align-items-center">
      <p class="box-content-subheader"><i class="fa-solid fa-pen px-2" data-bs-toggle="modal" data-bs-target="#noteModalLong"></i>hello</p>
    </div>
    <div class="d-flex align-items-center">
      <i class="fa-solid fa-eye px-2" data-bs-toggle="modal" data-bs-target="#exampleModalLong"></i>
      <p class="box-content-subheader">Customer Form</p>
    </div>
    <div class="d-flex align-items-center">
      <%= mail_to @project.company_email, class: "text-decoration-none px-2 text-dark" do %>
        <i class="fa-solid fa-envelope"></i>
      <% end %>
      <p class="box-content-subheader">Send E-mail</p>
    </div>
    <div class="box-info-bottom d-flex justify-content-around">
      <span class="badge badge-beige">two founders</span>
      <span class="badge badge-purple">equity partnership</span>
      <span class="badge badge-gold">travel tech</span>
      <span class="badge badge-lime-green">french company</span>
      <span class="badge badge-pink">Flipping to Delaware</span>
    </div>
</div>
