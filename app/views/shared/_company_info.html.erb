<!-- company info -->

<div class="project-show__company-info">
  <!-- project box-->
  <div class="project-box-content-header">
    <!-- content header-->
    <div class="d-flex align-items-center justify-content-between p-3">
      <div class="text-start">
        <h2 class="box-content-header">
          <%= @project.name %>
        </h2>
        <p class="box-content-subheader">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        </p>
      </div>
        <!-- button send an email-->
      <%= mail_to @project.company_email do %>
        <button type="button" class="btn btn-secondary btn-sm">Send an email</button>
      <% end %>
    </div>
    <div class="d-flex justify-content-around">
      <!-- tag-->
      <span class="badge badge-beige">two founders</span>
      <span class="badge badge-purple">Secondary</span>
      <span class="badge badge-gold">Success</span>
      <span class="badge badge-lime-green">Danger</span>
      <span class="badge badge-pink">Warning</span>
    </div>
    <!-- See the document company -->
    <div class="d-flex flex-row-reverse align-items-center mt-3">
      <i class="fa-solid fa-eye p-2" data-bs-toggle="modal" data-bs-target="#exampleModalLong"></i>
      <p class="box-content-subheader">See the document</p>
      <!-- Modal -->
    </div>
      <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Client Form</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
