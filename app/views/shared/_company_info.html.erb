<!-- company info -->
<div class="project-show__company-info px-3 pt-3">
  <div class="d-flex w-100 flex-wrap"> <!-- div flex box  -->
    <div class="w-25">  <!-- div photos 1 -->
      <%= image_tag "elena.png", style:"width: 100%; height: 150px; object-fit: cover;" %>
    </div>

    <div class="w-75 d-flex flex-column ps-3"> <!-- div Project name &co 2 -->
      <div class="pb-2">
        <h2 class="box-content-header">
          <%= link_to @project.company_name, @project.company_landing_page%>
        </h2>
        <div class="d-flex align-items-center justify-content-start">
          <div class="d-flex align-items-center justify-content-center pe-4">
            <p class="box-content-subheader mb-0"><i class="fa-solid fa-pen px-2" data-bs-toggle="modal" data-bs-target="#noteModalLong"></i>hello</p>
          </div>
          <div class="d-flex align-items-center justify-content-center pe-4">
            <i class="fa-solid fa-eye px-2" data-bs-toggle="modal" data-bs-target="#exampleModalLong"></i>
            <p class="box-content-subheader mb-0">Customer Form</p>
          </div>
          <div class="d-flex align-items-center justify-content-center">
            <%= mail_to @project.company_email, class: "text-decoration-none px-2 text-dark" do %>
              <i class="fa-solid fa-envelope"></i>
            <% end %>
            <p class="box-content-subheader mb-0">Send E-mail</p>
          </div>
        </div>
      </div>

      <div class="box-info-bottom d-flex flex-wrap justify-content-start w-100 pt-3">
        <span class="badge mb-2 me-2 badge-beige">two founders</span>
        <span class="badge mb-2 me-2 badge-purple">equity partnership</span>
        <span class="badge mb-2 me-2 badge-gold">travel tech</span>
        <span class="badge mb-2 me-2 badge-lime-green">french company</span>
        <span class="badge mb-2 me-2 badge-pink">Flipping to Delaware</span>
      </div>
    </div>

  </div>
</div>
