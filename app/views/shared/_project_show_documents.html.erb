<div class="project-show__documents">
<!-- <div class="d-flex justify-content-between">
      <%= link_to "Show all", "", data: {action: "click->doc-highlight#showAll"}, class: "simple-link"%>
    </div> -->

    <div class="quick-facts-docs d-flex justify-content-between">
    </div>

    <% @project.documents.each do |document| %>
      <div class="doc-list d-flex justify-content-between align-items-center mb-2" data-doc-highlight-target="doc" data-doc-name="<%= document.name %>">
        <p class="flex-grow-1 header-documents m-0"> <%= document.name%></p>
        <i class ="fa-solid fa-comment-medical"></i>
        <div class="">
          <div class="dropdown" data-controller="document">
            <button class="btn btn-secondary-doc btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" data-document-target="status" aria-expanded="false">
             <%= document.status %>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li>
                <%= button_tag "Done", data: {action: "click->document#update_done", document_target:"btn"}, class: "btn-status dropdown-item" %>
              </li>
              <li>
                <%= button_tag "Review pending", data: {action:"click->document#update_pending"}, class: "btn-status dropdown-item" %>
              </li>
              <li>
                <%= button_tag "Drafting", data: {action:"click->document#update_drafting"}, class: "btn-status dropdown-item" %>
              </li>
              <li>
                <%= button_tag "No Draft", data: {action:"click->document#update_no_draft"}, class: "btn-status dropdown-item" %>
              </li>
            </ul>
          </div>
        </div>
        <button type="button" class="btn btn-dark d-flex align-items-center justify-content-center" data-bs-toggle="modal" data-bs-target="#docModalLong">Open</button>
      </div>
    <% end %>
  </div>
</div>
<!-- MODAL See each documents-->
<div class="modal fade" id="docModalLong" tabindex="-1" role="dialog" aria-labelledby="docModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="docModalLongTitle">Doc name</h5>
        </div>
        <div class="modal-body">
          <embed src="" type="" height="400">
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary-doc" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


